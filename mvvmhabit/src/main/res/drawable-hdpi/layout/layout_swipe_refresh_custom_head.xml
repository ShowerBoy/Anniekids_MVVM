<?xml version="1.0" encoding="utf-8"?>
<com.xingzhi.xingzhiclass.common.view.swipeLayout.SwipeCustomHeadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/swipe_refresh_header_height">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/swipe_refresh_header_height"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="14.04dp"
            android:layout_height="20.52dp"
            android:layout_centerInParent="true"
            android:background="@drawable/swipe_refresh_header_pull_arrow" />

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/swipe_refresh_header_refreshing"
            android:id="@+id/head_refresh_view"
            android:layout_width="17.5dp"
            android:layout_height="17dp"
            />

    </RelativeLayout>
</com.xingzhi.xingzhiclass.common.view.swipeLayout.SwipeCustomHeadView>