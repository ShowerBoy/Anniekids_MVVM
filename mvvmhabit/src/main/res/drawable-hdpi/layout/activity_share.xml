<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="shareModel"
            type="com.xingzhi.xingzhiclass.common.third.ShareActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/shareTop"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="分享至"
                    android:textColor="@color/text_grayb" />

                <TextView
                    android:id="@+id/shareCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="取消"
                    android:onClick="@{shareModel.shareEvent}"
                    android:textColor="@color/text_grayb" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shreOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/shareTop"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/shareQQ"
                    android:onClick="@{shareModel.shareEvent}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/qqImg"
                        android:layout_width="@dimen/share_icon_size"
                        android:layout_height="@dimen/share_icon_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qqImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="QQ"
                        android:textColor="@color/text_grayb" />
                </RelativeLayout>

                <RelativeLayout
                    android:onClick="@{shareModel.shareEvent}"
                    android:id="@+id/shareQzone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/qzoneImg"
                        android:layout_width="@dimen/share_icon_size"
                        android:layout_height="@dimen/share_icon_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_qqzone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qzoneImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="QQ空间"
                        android:textColor="@color/text_grayb" />
                </RelativeLayout>

                <RelativeLayout
                    android:onClick="@{shareModel.shareEvent}"
                    android:id="@+id/shareWx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wxImg"
                        android:layout_width="@dimen/share_icon_size"
                        android:layout_height="@dimen/share_icon_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_wx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wxImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="微信"
                        android:textColor="@color/text_grayb" />
                </RelativeLayout>

                <RelativeLayout
                    android:onClick="@{shareModel.shareEvent}"
                    android:id="@+id/sharewxCircle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wxcircleImg"
                        android:layout_width="@dimen/share_icon_size"
                        android:layout_height="@dimen/share_icon_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_wxcircle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wxcircleImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="朋友圈"
                        android:textColor="@color/text_grayb" />


                </RelativeLayout>

                <RelativeLayout
                    android:onClick="@{shareModel.shareEvent}"
                    android:id="@+id/shareSina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/sinaImg"
                        android:layout_width="@dimen/share_icon_size"
                        android:layout_height="@dimen/share_icon_size"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_sina" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sinaImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="新浪"
                        android:textColor="@color/text_grayb" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
