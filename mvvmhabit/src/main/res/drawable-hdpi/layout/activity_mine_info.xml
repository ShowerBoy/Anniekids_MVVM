<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="infoModel"
            type="com.xingzhi.xingzhiclass.mine.activity.MineInfoActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/appbackground"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar" />

        <RelativeLayout
            android:onClick="@{infoModel.mineInfoEvent}"
            android:id="@+id/userImageRl"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="头像" />

            <ImageView
                android:id="@+id/infoImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                app:userHead="@{infoModel.userImage}" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/item_arrow_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />

        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{infoModel.mineInfoEvent}"
            android:id="@+id/mineNickRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="昵称"
                android:textColor="@color/text_black" />


            <ImageView
                android:id="@+id/nickarrow"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/item_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/nickarrow"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="@={infoModel.userName}"
                android:textColor="@color/text_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentTop="true"
                android:background="@color/divider" />
        </RelativeLayout>


        <RelativeLayout
            android:onClick="@{infoModel.mineInfoEvent}"
            android:id="@+id/mineSexRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="性别"
                android:textColor="@color/text_black" />


            <ImageView
                android:id="@+id/sexarrow"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/item_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/sexarrow"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                app:sexConvert="@{infoModel.userSex}"
                android:textColor="@color/text_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />

        </RelativeLayout>


        <RelativeLayout
            android:onClick="@{infoModel.mineInfoEvent}"
            android:id="@+id/minePhoneRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="手机号"
                android:textColor="@color/text_black" />


            <ImageView
                android:id="@+id/phonerrow"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/item_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/phonerrow"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="@={infoModel.phoneNum}"
                android:textColor="@color/text_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />

        </RelativeLayout>


        <RelativeLayout
            android:onClick="@{infoModel.mineInfoEvent}"
            android:id="@+id/mineChangePaswdRl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mineAboutImg"
                android:text="修改密码"
                android:textColor="@color/text_black" />


            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/item_arrow_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_heigh"
                android:layout_alignParentBottom="true"
                android:background="@color/divider" />

        </RelativeLayout>


        <TextView
            android:id="@+id/loginOutBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:layout_marginRight="@dimen/margin_size_50"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_button_bg"
            android:gravity="center"
            android:text="@string/mine_login_out"
            android:onClick="@{infoModel.mineInfoEvent}"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />

    </LinearLayout>
</layout>
