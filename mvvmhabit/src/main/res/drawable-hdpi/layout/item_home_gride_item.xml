<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gride_img"
        android:layout_width="@dimen/home_gride_icon"
        android:layout_height="@dimen/home_gride_icon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_gride_banxing"/>

    <TextView
        android:id="@+id/gride_Title"
        android:layout_below="@+id/gride_img"
        android:text="板鞋"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black" />




</RelativeLayout>