<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/simple_dialog_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="标题"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/simple_dialog_tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="@dimen/margin_size_40"
        android:paddingLeft="@dimen/margin_size_35"
        android:paddingRight="@dimen/margin_size_35"
        android:paddingTop="@dimen/margin_size_40"
        android:text="内容"
        android:textColor="@color/text_grayb"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/simple_dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_dialog_tvBtnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_bg_gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_grayb"
            android:textSize="15sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/simple_dialog_tvBtnSure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/shape_dialog_bg" />

</LinearLayout>