<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginModel"
            type="com.xingzhi.xingzhiclass.mine.activity.LoginActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_transparent"
            android:visibility="invisible">

        </RelativeLayout>

        <ImageView
            android:id="@+id/loginBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:onClick="@{loginModel.onClickEvent}"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_15"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_logo"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_corner_white">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_phone_num" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/mine_phone"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14"
                android:textColorHint="@color/text_hint"
                android:layout_toRightOf="@+id/phoneIcon"
                android:background="@null"
                android:padding="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paswdLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_corner_white">

            <ImageView
                android:id="@+id/paswdIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_paswd" />

            <EditText
                android:id="@+id/paswdInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/mine_paswd"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14"
                android:textColorHint="@color/text_hint"
                android:layout_toRightOf="@+id/paswdIcon"
                android:background="@null"
                android:padding="5dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/paswdLayout"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:layout_marginRight="@dimen/margin_size_50"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_button_bg"
            android:gravity="center"
            android:onClick="@{loginModel.onClickEvent}"
            android:text="@string/mine_login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/loginForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:layout_marginRight="@dimen/margin_size_50"
            android:layout_marginTop="5dp"
            android:onClick="@{loginModel.onClickEvent}"
            android:text="@string/mine_forget_paswd"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/loginRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/loginBtn"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:layout_marginRight="@dimen/margin_size_50"
            android:layout_marginTop="5dp"
            android:onClick="@{loginModel.onClickEvent}"
            android:text="@string/mine_register_now"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/loginqq"
            android:layout_below="@+id/loginBtn"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_marginTop="60dp"
            android:onClick="@{loginModel.onClickEvent}"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:src="@drawable/mine_qq" />

        <ImageView
            android:id="@+id/loginwx"
            android:layout_below="@+id/loginBtn"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_marginTop="60dp"
            android:onClick="@{loginModel.onClickEvent}"
            android:layout_toRightOf="@+id/loginqq"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:src="@drawable/mine_weixin" />

        <ImageView
            android:id="@+id/loginsina"
            android:layout_toRightOf="@+id/loginwx"
            android:layout_below="@+id/loginBtn"
            android:onClick="@{loginModel.onClickEvent}"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:src="@drawable/mine_sina" />


    </RelativeLayout>
</layout>
