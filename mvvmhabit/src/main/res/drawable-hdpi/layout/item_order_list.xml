<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/orderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单编号:XXXXXXXX"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018-3-15 00:00"
            android:textColor="@color/text_grayb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_heigh"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="128dp"
            android:layout_height="74dp"
            android:id="@+id/orderImage"
            android:src="@drawable/default_placeholder_01"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/image_round_radius"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            />

        <TextView
            android:id="@+id/orderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/orderImage"
            android:text="XXXXX"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="$998"
            android:textColor="@color/text_yellow" />

        <TextView
            android:id="@+id/orderDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/orderImage"
            android:text="XXXXX"
            android:textColor="@color/text_grayb"
            android:textSize="@dimen/font_size_12" />


        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="6dp"
            android:text="待付款"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_size_12" />

    </RelativeLayout>

</LinearLayout>