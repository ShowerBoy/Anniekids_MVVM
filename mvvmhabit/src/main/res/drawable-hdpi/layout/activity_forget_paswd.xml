<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="forgetModel"
            type="com.xingzhi.xingzhiclass.mine.activity.ForgetPaswdActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_transparent"
            android:visibility="invisible">

        </RelativeLayout>

        <ImageView
            android:id="@+id/forgetBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_15"
            android:onClick="@{forgetModel.forgetEvent}"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/fphoneLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/fphoneIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_phone_num" />


            <EditText
                android:id="@+id/fphoneInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/fphoneIcon"
                android:background="@null"
                android:hint="@string/mine_input_phone"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fverfitLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/fphoneLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fverfitIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_paswd" />

            <TextView
                android:id="@+id/fverifibtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_square_white"
                android:gravity="center"
                android:onClick="@{forgetModel.forgetEvent}"
                android:text="@={forgetModel.timerDown}"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fverfitInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/fverifibtn"
                android:layout_toRightOf="@+id/fverfitIcon"
                android:background="@null"
                android:hint="@string/mine_input_verfi"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/font_size_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fpaswdLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/fverfitLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fpaswdIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_paswd" />

            <EditText
                android:id="@+id/fpaswdInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/fpaswdIcon"
                android:background="@null"
                android:hint="@string/mine_input_paswd"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/font_size_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fpaswdLayout2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/fpaswdLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fpaswdIcon2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_login_paswd" />

            <EditText
                android:id="@+id/fpaswdInput2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/fpaswdIcon2"
                android:background="@null"
                android:hint="@string/mine_input_suer_paswd"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/font_size_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/paswdTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fpaswdLayout2"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/mine_paswd_tips"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/paswdTip"
            android:layout_marginLeft="@dimen/margin_size_50"
            android:layout_marginRight="@dimen/margin_size_50"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_button_bg"
            android:gravity="center"
            android:onClick="@{forgetModel.forgetEvent}"
            android:text="@string/mine_reset_paswd"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />


    </RelativeLayout>
</layout>
