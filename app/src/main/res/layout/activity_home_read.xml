<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.annie.annieforchild.ui.main.vm.HomeReadViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="@dimen/app_item_height">
            <View
                android:id="@+id/sectionFlag"
                android:layout_width="4dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@color/topbarbackground"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_toRightOf="@+id/sectionFlag"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:text="流利读"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sectionDesc"
                android:layout_toRightOf="@+id/sectionTitle"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_grayb"
                android:text="看原版绘本"
                android:layout_marginLeft="15dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_size_10"
                android:text="更多"
                android:gravity="center"
                android:textSize="@dimen/margin_size_15"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}"
            android:textSize="18sp"
            android:background="@color/background_tab_pressed"
            android:gravity="center"
            />
    </LinearLayout>

</layout>