<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>

    <variable
        name="viewModel"
        type="com.annie.annieforchild.ui.main.vm.HoemItemEarViewModel" />
</data>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/margin_size_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_home_ear"
                android:layout_width="165dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/iv_placeholder" />

            <TextView
                android:id="@+id/tv_ear_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_home_ear"
                android:padding="5dp"
                android:singleLine="false"
                android:text="@{viewModel.title}"
                android:textColor="#333"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>





</layout>