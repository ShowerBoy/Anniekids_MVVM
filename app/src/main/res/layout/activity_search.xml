<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_size_5"
                android:src="@drawable/icon_left" />
            <android.support.v7.widget.SearchView
                android:id="@+id/home_search"
                android:layout_width="288dp"
                android:layout_height="34dp"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/iv_left"
                app:iconifiedByDefault="false"
                app:queryHint="请输入名称" />
            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:text="取消"
                android:layout_alignParentRight="true"
                android:padding="4dp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/history_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="热门搜索"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/history_flexbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap">

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="清空历史记录"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/graybg" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/search_tv"
                android:text="分类搜索"
                android:layout_marginLeft="@dimen/margin_size_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/search_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/annikids_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="annikis1"
                    android:layout_margin="@dimen/margin_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="annikis1"
                    android:layout_margin="@dimen/margin_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="annikis1"
                    android:layout_margin="@dimen/margin_size_5"
                    />
            </LinearLayout>

          <!--<android.support.v7.widget.RecyclerView-->
              <!--android:layout_below="@+id/search_tv"-->
              <!--android:layout_margin="@dimen/margin_size_5"-->
              <!--android:id="@+id/search_rcview"-->
              <!--android:layout_width="match_parent"-->
              <!--android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>-->

        </RelativeLayout>


    </LinearLayout>

</layout>