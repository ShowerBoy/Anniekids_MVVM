<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="viewModel"
            type="com.annie.annieforchild.ui.main.vm.AnimationListViewModel" />
    </data>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/margin_size_4"
        app:cardElevation="@dimen/margin_size_2"
        android:layout_margin="@dimen/margin_size_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_home_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/iv_placeholder" />
                <TextView
                    android:id="@+id/tv_recommend_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/iv_home_recommend"
                    android:padding="@dimen/margin_size_5"
                    android:text="联合国新兴全球领导人和全球公民培养计划"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/play_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_play_video"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </android.support.v7.widget.CardView>






</layout>