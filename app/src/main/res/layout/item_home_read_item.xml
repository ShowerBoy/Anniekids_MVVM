<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_size_2"
    app:cardElevation="@dimen/margin_size_2"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_size_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_home_read"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/iv_placeholder" />

        <TextView
            android:id="@+id/tv_read_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_home_read"
            android:padding="5dp"
            android:text="Frame is  very good to my heart"
            android:textColor="#333"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>