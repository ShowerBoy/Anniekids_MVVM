<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_size_4"
    app:cardElevation="@dimen/margin_size_2"
    android:layout_margin="@dimen/margin_size_10"
    >

        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_home_recommend"
                android:layout_width="165dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/iv_placeholder" />
            <TextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_home_recommend"
                android:padding="@dimen/margin_size_5"
                android:text="联合国新兴全球领导人和全球公民培养计划"
                android:textColor="#333"
                android:textSize="12sp" />
        </RelativeLayout>






</android.support.v7.widget.CardView>