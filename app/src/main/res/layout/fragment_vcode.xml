<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <import type="com.annie.annieforchild.ui.login.vm.VcodeViewModel" />

        <variable
            name="viewModel"
            type="VcodeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="56dp"
        android:paddingEnd="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_big"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/icon_phone" />

            <EditText
                android:id="@+id/edit_vphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="phone"
                android:text="@={viewModel.phone}"
                android:textColor="@android:color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_big"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/icon_vcode" />

            <EditText
                android:id="@+id/edit_vcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:inputType="number"
                android:text="@={viewModel.vcode}"
                android:textColor="@android:color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

            <TextView
                android:id="@+id/get_vcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text="@={viewModel.getVcode}"
                android:textColor="@color/text_orange"
                android:textSize="14sp"
                binding:onClickCommand="@{viewModel.onGetVcodeClick}" />

        </LinearLayout>

        <Button
            android:id="@+id/vloginBtn"
            style="@style/commitBtn"
            android:layout_marginTop="@dimen/margin_size_big"
            android:enabled="false"
            android:text="登 录"
            binding:onClickCommand="@{viewModel.onLoginByVcodeClick}" />
    </LinearLayout>
</layout>
